<resources>

    <!-- parent="Theme.AppCompat.NoActionBar"
    parent="MaterialDrawerTheme.Light.DarkToolbar.TranslucentStatus"
    -->
    <style name="Theme.MyTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/colorPrimary</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/colorSelectedTab</item>

        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight, and colorSwitchThumbNormal. -->
        <item name="colorControlNormal">@android:color/white</item>

        <!-- MaterialDrawer specific values-->
        <item name="material_drawer_primary_text">@color/colorPrimaryText</item>
        <item name="material_drawer_selected_text">@color/colorPrimary</item>

    </style>

    <style name = "MenuLabelsStyle">
        <item name="android:background">@drawable/ic_pencil</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="NavigationDrawerStyle">
        <item name="android:textSize">20sp</item><!-- text size in menu-->
        <item name="android:listPreferredItemHeightSmall">40dp</item><!-- item size in menu-->
    </style>
</resources>
