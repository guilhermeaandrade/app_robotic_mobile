<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ap="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cv"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="#B2DFDB"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="false"
        app:cardPreventCornerOverlap="true"
        app:cardMaxElevation="4dp"
        app:cardCornerRadius="6dp"
        tools:context="com.example.guilherme.tcc_1_4.Fragments.GraphFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <com.androidplot.xy.XYPlot
                android:id="@+id/plot"
                android:layout_width="345dp"
                android:layout_height="380dp"
                ap:rangeLabel="cm"
                ap:domainLabel="s"
                ap:borderColor="#000000"
                ap:backgroundColor="#000000"
                ap:graphBackgroundColor="#000000"
                ap:gridBackgroundColor="#111111"
                ap:gridPaddingLeft="12dp"
                ap:gridPaddingRight="5dp"
                ap:gridPaddingTop="7dp"
                ap:gridPaddingBottom="13dp"
                ap:labelTextSize="17sp"
                ap:rangeLabelTextSize="14sp"
                ap:domainLabelTextSize="14sp"
                ap:graphMarginTop="3dp"
                ap:graphMarginBottom="20dp"
                ap:graphMarginLeft="15dp"
                ap:graphMarginRight="5dp"
                ap:graphDomainLineColor="#FFFFFF"
                ap:graphDomainLineThickness="1dp"
                ap:graphRangeLineColor="#FFFFFF"
                ap:graphRangeLineThickness="1dp"
                ap:rangeTickLabelTextSize="15sp"
                ap:rangeOriginTickLabelTextSize="15sp"
                ap:domainTickLabelTextSize="15sp"
                ap:domainOriginTickLabelTextSize="15sp"
                ap:legendTextSize="13sp"
                ap:legendIconHeight="20dp"
                ap:legendIconWidth="20dp"
                ap:legendHeight="25dp"
                ap:legendAnchorPosition="right_bottom"
                android:paddingBottom="7dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="false"
                android:layout_alignWithParentIfMissing="false" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/spGraphs"
                android:layout_alignStart="@+id/plot"
                android:spinnerMode="dropdown"
                android:prompt="@string/graph_prompt"
                android:entries="@array/graph_types"
                android:layout_above="@+id/plot"
                android:textAlignment="center"
                android:animateLayoutChanges="false"
                android:layout_below="@+id/tvChoice"
                android:padding="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="15dp"
                android:visibility="visible"
                android:background="@color/colorPrimary"
                android:popupBackground="@color/colorPrimary" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Escolha o grÃ¡fico desejado: "
                android:id="@+id/tvChoice"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:paddingTop="5dp"
                android:padding="7dp"
                android:textColor="@color/black"
                android:textSize="18sp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>