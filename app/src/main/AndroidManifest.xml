<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.guilherme.tcc_1_4" >

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH_PRIVILEGED" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.MyTheme" >
        <activity
            android:name=".Controller.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Controller.ComponentActivity"
            android:label="Component Activity">
        </activity>

        <activity
            android:name=".Controller.MapActivity"
            android:label="Map Activity">
        </activity>

        <activity
            android:name=".Controller.InformationActivity"
            android:label="Information Activity">
        </activity>

        <activity
            android:name=".Controller.ManualControlActivity"
            android:label="Manual Control Activity">
        </activity>

        <activity
            android:name=".Controller.SelectDevice"
            android:label="Tela 2 Activity">
        </activity>

    </application>

</manifest>
